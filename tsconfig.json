{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "includes": ["src", "examples"],
}