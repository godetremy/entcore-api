{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "strict": true,
    "noEmit": false,
    "outDir": "./dist",
    "skipLibCheck": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },

  "include": ["src"],
  "exclude": ["examples"]
}